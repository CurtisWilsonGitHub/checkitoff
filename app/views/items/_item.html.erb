<h2> <%= current_user.name %> To Do Items </h3>
<div class = "row">
    <div class = "col-md-12">
        <% @items.each do |item| %>
          <div class="media">
            <div class="media-body">
                <h4 class="media-heading">
                    <%= item.name %>
                    <%= link_to "", user_item_path(current_user, item.id), method: :delete, remote: true, class: 'fa fa-check' %>
                </h4>
            </div>
          </div>
        <% end %>
    </div>
</div>
